{
  "cli": {
    "version": ">= 15.0.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "env": {
        "APP_ENV": "development"
      },
      "ios": {
        "simulator": true
      },
      "android": {
        "buildType": "apk"
      }
    },
    "staging": {
      "distribution": "store",
      "env": {
        "APP_ENV": "development"
      },
      "ios": {
        "autoIncrement": true
      },
      "android": {
        "buildType": "app-bundle",
        "autoIncrement": true
      }
    },
    "production": {
      "distribution": "store",
      "env": {
        "APP_ENV": "production"
      },
      "ios": {
        "autoIncrement": true
      },
      "android": {
        "buildType": "app-bundle",
        "autoIncrement": true
      }
    }
  },
  "submit": {
    "staging": {
      "ios": {
        "appleId": "${APPLE_ID}",
        "ascAppId": "${APPLE_ASC_ID}"
      },
      "android": {
        "serviceAccountKeyPath": "./secrets/play-store-service-account.json",
        "track": "internal"
      }
    },
    "production": {
      "ios": {
        "appleId": "${APPLE_ID}",
        "ascAppId": "${APPLE_ASC_ID}"
      },
      "android": {
        "serviceAccountKeyPath": "./secrets/play-store-service-account.json",
        "track": "production"
      }
    }
  }
}
